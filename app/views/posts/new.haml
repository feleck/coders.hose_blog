%h1 Add new post
= form_for(@post) do |f|
  - if @post.errors.any?
    #error_explanation
    .alert.alert-danger
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg
  %p
    = f.label :title
    %br
    = f.text_field :title

  %p
    = f.label :body
    %br
    = f.text_area :body

  %p
    = f.submit class: 'btn'

%p= link_to 'All posts', posts_path, class: 'btn'
